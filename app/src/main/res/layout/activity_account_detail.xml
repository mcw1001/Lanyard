<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listBackground"
    tools:context=".AccountDetailActivity"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Icon -->
            <ImageView
                android:id="@+id/detailIconAccountItem"
                android:layout_width="78dp"
                android:layout_height="93dp"
                android:layout_margin="@dimen/listText"
                android:src="@drawable/placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/detailTitleAccountItem"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="48dp"
                android:text="Title"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/listTitle"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/detailIconAccountItem"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Username -->
            <TextView
                android:id="@+id/detailUserNameTitleAccountItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:text="@string/listUserTitle"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/listText"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/detailIconAccountItem"
                app:layout_constraintTop_toBottomOf="@id/detailIconAccountItem" />

            <TextView
                android:id="@+id/detailUserNameAccountItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:text="empty user name"
                android:textSize="@dimen/listText"
                app:layout_constraintLeft_toRightOf="@id/detailUserNameTitleAccountItem"
                app:layout_constraintTop_toBottomOf="@id/detailIconAccountItem" />

            <!-- Password -->
            <TextView
                android:id="@+id/detailPassTitleAccountItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:layout_marginBottom="@dimen/listTextSpacing"
                android:text="@string/listPassTitle"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/listText"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/detailIconAccountItem"
                app:layout_constraintTop_toBottomOf="@id/detailUserNameTitleAccountItem" />

            <TextView
                android:id="@+id/detailPassAccountItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:layout_marginBottom="@dimen/listTextSpacing"
                android:text="empty password"
                android:textSize="@dimen/listText"
                app:layout_constraintLeft_toRightOf="@id/detailPassTitleAccountItem"
                app:layout_constraintTop_toBottomOf="@id/detailUserNameTitleAccountItem" />

            <!-- Creation date -->
            <TextView
                android:id="@+id/detailCreationDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:layout_marginBottom="@dimen/listTextSpacing"
                android:text="Creation Date:"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/listText"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/detailIconAccountItem"
                app:layout_constraintTop_toBottomOf="@id/detailPassTitleAccountItem" />

            <TextView
                android:id="@+id/detailCreationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:layout_marginBottom="@dimen/listTextSpacing"
                android:text="empty creation date"
                android:textSize="@dimen/listText"
                app:layout_constraintLeft_toRightOf="@id/detailCreationDateTitle"
                app:layout_constraintTop_toBottomOf="@id/detailPassAccountItem" />

            <!-- Notes -->
            <TextView
                android:id="@+id/detailPassNotesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:layout_marginBottom="@dimen/listTextSpacing"
                android:text="Notes:"
                android:textColor="@color/mainTextColor"
                android:textSize="@dimen/listText"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/detailIconAccountItem"
                app:layout_constraintTop_toBottomOf="@id/detailCreationDate" />

            <TextView
                android:id="@+id/detailPassNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/startMarginList"
                android:layout_marginEnd="@dimen/startMarginList"
                android:layout_marginBottom="@dimen/listTextSpacing"
                android:text="empty notes box"
                android:textSize="@dimen/listText"
                app:layout_constraintLeft_toLeftOf="@id/detailIconAccountItem"
                app:layout_constraintTop_toBottomOf="@id/detailPassNotesTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editAccountBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_margin="16dp"
        android:backgroundTint="@color/keyYellowAccentColor"
        app:fabSize="normal"
        android:onClick="onEditAccountClick" />

</FrameLayout>